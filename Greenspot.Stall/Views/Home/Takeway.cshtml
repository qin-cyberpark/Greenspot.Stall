<!DOCTYPE html>
<html lang="en" ng-app="greenspotStall" ng-cloak>
<head>
    <meta charset="utf-8">
    <meta name="description" content="Stall@Greenspot">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
    <base href="/">
    <title>久等了</title>
    <link rel="shortcut icon" href="~/static/img/favicon.png">
    <!-- 3rd party stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/angular-material/1.1.0-rc4/angular-material.min.css">
    <!-- platform stylesheet -->
    @if (HttpContext.Current.IsDebuggingEnabled)
    {
        <link rel="stylesheet/less" href="~/Content/less/global.less">
        <link rel="stylesheet/less" href="~/Content/less/home.less">
    }
    else
    {
        <link rel="stylesheet" href="~/static/css/stall.min.css">
    }
</head>
<body>
    <div class="banner">
        <div class="title">久等了</div>
        <div class="sub-title">COMING SOON</div>
    </div>
    <md-content id="takeway-content" ng-controller="CustomerController as custCtrl" ng-init="custCtrl.init()">
        <form action="home/search" method="get">
            <div class="takeway-bar" layout="row" layout-align="space-between start">
                <select name="area" class="area-selector">
                    <option value="NZ-Auckland-Auckland City">City</option>
                    <option value="NZ-Auckland-Central Auckland">中区</option>
                    <option value="NZ-Auckland-North Shore">北岸</option>
                    <option value="NZ-Auckland-East Auckland">东区</option>
                    <option value="NZ-Auckland-West Auckland">西区</option>
                    <option value="NZ-Auckland-South Auckland">南区</option>
                </select>
                <md-input-container md-no-float class="md-block search-text" flex="50">
                    <input type="hidden" name="category" value="takeway" />
                    <input type="text" name="keyword" placeholder="搜索" value="@Request["keyword"]">
                </md-input-container>
                <md-button type="submit" class="btn-search" aria-label="Search">
                    <md-icon md-svg-icon="search"></md-icon>
                </md-button>
                <md-button class="btn-cart" aria-label="Cart" ng-click="custCtrl.gotoUrl('/customer/cart')">
                    <span class="cart-amount" ng-if="custCtrl.cart.qty>0">{{custCtrl.cart.qty}}</span>
                    <md-icon md-svg-icon="cart"></md-icon>
                </md-button>
            </div>
        </form>
        <div>最新</div>
        <md-card>
            <md-card-title>
                <md-card-title-text layout-align="space-between center">
                    <span class="md-headline">房房私房菜</span>
                    <span class="md-subhead">推荐1</span>
                    <span class="md-subhead">推荐2</span>
                    <span class="md-subhead">推荐3</span>
                </md-card-title-text>
                <md-card-title-media>
                    <div class="md-media-md card-media">
                        <img />
                    </div>
                </md-card-title-media>
            </md-card-title>
        </md-card>
        <md-card>
            <md-card-title>
                <md-card-title-media>
                    <div class="md-media-md card-media">
                        <img />
                    </div>
                </md-card-title-media>
                <md-card-title-text layout-align="space-betwee center">
                    <span class="md-headline">房房私房菜</span>
                    <span class="md-subhead">推荐1</span>
                    <span class="md-subhead">推荐2</span>
                    <span class="md-subhead">推荐3</span>
                </md-card-title-text>
            </md-card-title>
        </md-card>
    </md-content>
    <!-- 3rd party libraries -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.8/angular.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.8/angular-route.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.8/angular-aria.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.8/angular-animate.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.8/angular-messages.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular-material/1.1.0-rc4/angular-material.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/js-cookie/2.1.2/js.cookie.min.js"></script>
    <!-- owner scripts -->
    @if (HttpContext.Current.IsDebuggingEnabled)
    {
        <script type="text/javascript" src="~/static/lib/less/dist/less.min.js"></script>
        <script type="text/javascript" src="~/Content/middle-js/app.js"></script>
        <script type="text/javascript" src="~/Content/middle-js/cart.js"></script>
        <script type="text/javascript" src="~/Content/middle-js/controller/customer.controller.js"></script>
    }
    else
    {
        <script type="text/javascript" src="~/static/js/stall.min.js"></script>
    }
</body>
</html>
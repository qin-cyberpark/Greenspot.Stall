@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    Page.Title = "小铺";
    var _products = (IList<Greenspot.Stall.Models.Product>)ViewBag.Products;
    var _stalls = (IList<Greenspot.Stall.Models.Stall>)ViewBag.Stalls;
}



<md-tabs md-border-bottom md-stretch-tabs="always">
    <md-tab label="商品">
        @if (_products != null && _products.Count > 0)
        {
            <div class="ProductList">
                <md-grid-list md-cols-xs="2" md-cols-sm="2" md-cols-md="4" md-cols-gt-md="4"
                              md-row-height-gt-md="1:1" md-row-height="2:2"
                              md-gutter="5px">

                    @foreach (var p in _products)
                    {
                        <md-grid-tile ng-click="custCtrl.gotoUrl('@string.Format("/product/detail/{0}",p.Id)')">
                            <img src="@p.Image" style="width:100%;height:100%" />
                            <md-grid-tile-header>
                                @p.BaseName
                            </md-grid-tile-header>
                            <md-grid-tile-footer>
                                @string.Format("{0:$0.00}", p.TotalPrice)
                            </md-grid-tile-footer>
                        </md-grid-tile>
                    }
                </md-grid-list>
            </div>
        }
        else
        {
            <CENTER>
                <h4>换个关键字试试？</h4>
            </CENTER>
        }
    </md-tab>
    <md-tab label="商铺">
        @if (_stalls != null && _stalls.Count > 0)
        {
            <md-list flex>
                @foreach (var s in _stalls)
                {
                    <md-list-item class="md-2-line" ng-click="custCtrl.gotoUrl('@string.Format("/stall/index/{0}",@s.Id)')">
                        <img ng-src="@string.Format("/static/img/stall-logo.png", @s.Id)" class="md-avatar" alt="@s.StallName" />
                        <div class="md-list-item-text">
                            <h3>@s.StallName</h3>
                            <p>@s.StallName</p>
                        </div>
                    </md-list-item>
                }
            </md-list>
        }
        else
        {

            <CENTER>
                <h4>换个关键字试试？</h4>
            </CENTER>
        }
    </md-tab>
</md-tabs>
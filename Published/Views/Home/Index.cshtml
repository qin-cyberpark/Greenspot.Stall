@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    Page.Title = "小铺";
    var _products = (IList<Greenspot.Stall.Models.Product>)ViewBag.Products;
}
<div class="RecommendProductList">
    <md-grid-list md-cols-xs="2" md-cols-sm="2" md-cols-md="4" md-cols-gt-md="4"
                  md-row-height-gt-md="1:1" md-row-height="2:2"
                  md-gutter="5px">

        @foreach (var p in _products)
        {
            <md-grid-tile ng-click="custCtrl.gotoUrl('@string.Format("/product/detail/{0}",p.Id)')">
                <img src="@p.Image" style="width:100%;height:100%" />
                <md-grid-tile-footer>
                    <div style="font-size:14px;white-space:nowrap;overflow:hidden;">@p.BaseName</div>
                </md-grid-tile-footer>
            </md-grid-tile>
        }
    </md-grid-list>
</div>